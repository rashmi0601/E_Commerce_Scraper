<h1>Web Scraper</h1>

<%= form_with url: scrape_products_path, method: :post, local: true do |form| %>
  <%= form.text_field :url, placeholder: "Enter product URL" %>
  <%= form.submit "Scrape Product" %>
<% end %>

<%= form_with url: products_path, method: :get, id: "search-form", local: false do |form| %>
  <%= form.text_field :query, placeholder: "Search products", id: "search-input" %>
<% end %>

<div id="product-results">
  <% @categories.each do |category| %>
    <h2><%= category.name %></h2>
    <ul>
      <% category.products.each do |product| %>
        <li>
          <h3><%= product.title %></h3>
          <p><%= product.description %></p>
          <p>Size: <%= product.size %></p>
          <p>Price: <%= product.price %></p>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
